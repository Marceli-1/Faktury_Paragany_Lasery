<Window x:Class="Faktury_Paragany_Lasery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Faktury_Paragany_Lasery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TabControl>
            <TabItem Header="Firmy">
                <Grid Background="Green" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="302*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.ColumnSpan="1">
                        <Button Height="30" Width="100" Margin="10" Click="Button1_Click">Dodaj</Button>
                        <Button Height="30" Width="100" Margin="10" Click="Button2_Click">Usuń</Button>
                        <Button Height="30" Width="100" Margin="10" Click="Button3_Click">Wystaw Fakturę</Button>
                        <Button Height="30" Width="100" Margin="10" Click="Button4_Click">Historia</Button>
                        <Button Height="30" Width="100" Margin="10" Click="Button5_Click">Informacje</Button>
                    </StackPanel>
                    <StackPanel Grid.ColumnSpan="2">
                        <ComboBox Name="Lista_firm" ItemsSource="{Binding fonts}" DisplayMemberPath="Source" Text="My Cities" IsEditable="true" IsReadOnly="true" SelectionChanged="Lista_firm_SelectionChanged"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Produkty">

            </TabItem>
            <TabItem Header="Zakup">

            </TabItem>
            <TabItem Header="Historia zakupów">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
